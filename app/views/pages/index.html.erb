<h1>Listing pages</h1>

<table>
  <tr>
    <th>Column</th>
    <th>Path</th>
    <th>Layout</th>
    <th>Title</th>
    <th>Breadcrumb</th>
    <th>Description</th>
    <th>Keywords</th>
    <th>Status</th>
    <th>Nav type</th>
    <th>Created by</th>
    <th>Updated by</th>
    <th>Published by</th>
    <th>Published at</th>
    <th>Destroyed at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.column_id %></td>
    <td><%= page.path %></td>
    <td><%= page.layout_id %></td>
    <td><%= page.title %></td>
    <td><%= page.breadcrumb %></td>
    <td><%= page.description %></td>
    <td><%= page.keywords %></td>
    <td><%= page.status %></td>
    <td><%= page.nav_type %></td>
    <td><%= page.created_by %></td>
    <td><%= page.updated_by %></td>
    <td><%= page.published_by %></td>
    <td><%= page.published_at %></td>
    <td><%= page.destroyed_at %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

